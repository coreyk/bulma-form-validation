{
    "compilerOptions": {
        "module": "commonjs",
        "sourceMap": true,
        "target": "es3",
        "pretty": true,
        "checkJs": true,
        "allowJs": true,
        "noImplicitAny": true,
        "noImplicitThis": true, 
        "alwaysStrict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "lib": ["dom", "es6"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}